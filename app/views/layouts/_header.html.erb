<header class="navbar navbar-fixed-top navbar-default">
  <div class="container">
    <%= link_to t("logo"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <%= render "layouts/header/#{current_user.role}" %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.name %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("lk_info"), current_user %></li>
              <li><%= link_to t("lk_edit_profile"), edit_user_path(current_user) %></li>
              <li><%= link_to t("lk_logout"), logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <%= render "layouts/header/visitor" %>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
